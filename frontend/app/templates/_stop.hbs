<div class='row stop'>
  <div class='col-xs-12'>
    <div class='row'>
      <div class='col-xs-12 col-sm-6 col-sm-offset-3 text-left'>
        <span class='stop_name'>{{stop.name}}</span>
        {{#if linesFetching}}
        {{fa-icon "spinner" spin=true class="secondary"}}
        {{/if}}
        <span class='distance'>
          {{inline-svg "assets/images/walking.svg"}}
          {{fa-icon "long-arrow-right"}}
          {{#if stop.walking_time}}
            <span>{{unbound stop.walking_time}} <a href='{{unbound stop.navigation_url}}' target='_blank'>{{fa-icon "external-link"}}</a></span>
          {{else}}
          {{fa-icon "spinner" spin=true class="tertiary"}}
          {{/if}}
        </span>
      </div>
    </div>
    <div class='lines_list'>
      {{#unless linesFetching}}
        {{#if stop.lines}}
          {{#each stop.lines as |line|}}
            {{partial 'line'}}
          {{/each}}
        {{else}}
          <div class='row line'>
            <div class='col-xs-12 col-sm-1 col-sm-offset-3 line_name_block'>
            </div>
            <div class='col-xs-12 col-sm-5 line_directions_list'>
              <em>Aucun passage programm√©</em>
            </div>
          </div>
        {{/if}}
      {{/unless}}
    </div>
  </div>
</div>
